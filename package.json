{
  "name": "@razee/remoteresource",
  "version": "0.0.0-dev",
  "description": "RazeeDeploy: component to download and manage files",
  "main": "./src/index.js",
  "bin": "./bin/remoteresource",
  "keywords": [
    "kubernetes",
    "razee",
    "razeedash",
    "download",
    "CD"
  ],
  "scripts": {
    "start": "node src/index.js",
    "test": "nyc --reporter=html --all --reporter=text mocha ",
    "test:debug": "mocha --inspect-brk",
    "check-coverage": "nyc check-coverage --statements 0 --branches 0 --functions 0 --lines 0",
    "lint": "npx npm-run-all --npm-path npm eslint markdownlint yaml-lint jsonlint shellcheck",
    "eslint": "npx eslint src/",
    "markdownlint": "npx markdownlint-cli README.md docs/",
    "dockerlint": "npx dockerlint Dockerfile",
    "commit": "git-cz",
    "yaml-lint": "npx yaml-lint .travis.yml kubernetes/RemoteResource/resource.yaml",
    "jsonlint": "npx jsonlint --quiet build/viewTemplate.json",
    "shellcheck": "npx shellcheck build/*.sh"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:razee-io/RemoteResource.git"
  },
  "contributors": [
    {
      "name": "Alex Lewitt"
    },
    {
      "name": "Adam King"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@razee/kubernetes-util": "^1.1.0",
    "@razee/razeedeploy-core": "^1.3.3",
    "axios": "^1.2.3",
    "bunyan": "^1.8.15",
    "clone": "^2.1.2",
    "deepmerge": "^4.2.2",
    "fs-extra": "^10.1.0",
    "object-hash": "^3.0.0",
    "object-path": "^0.11.8",
    "parse-filepath": "^1.0.2",
    "parse-github-url": "^1.0.2",
    "request-promise-native": "^1.0.9",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "dockerlint": "^0.3.9",
    "eslint": "^8.23.0",
    "markdownlint": "^0.26.2",
    "mocha": "^10.0.0",
    "nock": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "yaml-lint": "^1.7.0"
  }
}
